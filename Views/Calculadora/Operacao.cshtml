@{
    ViewData["Title"] = "Operacao";
}

<h1>Calculadora</h1>

<p>Utilize o formulário para realizar uma operação matemática</p>


<form action="Resultado" method="post">
    <label for="number1">Número 1</label>  <br> 
    <input type="number" name="number1" id="number1"> <br><br>

    <label for="number2">Número 2</label> <br> 
    <input type="number" name="number2" id="number2"> <br><br>

    <label for="operacao">Operação:</label>  <br> 
    <select name="operacao">
        <option value="Soma">Somar</option>
        <option value="Subtracao">Subtrair</option>
        <option value="Multiplicacao">Multiplicar</option>
        <option value="Divisao">Dividir</option>
    </select> <br> <br> 
    
   
    <button type="submit">Calcular</button>
</form>


